{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "directives/*": ["src/directives/*"],
      "composables/*": ["src/composables/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", "build/**/*", "test/**/*"]
}
